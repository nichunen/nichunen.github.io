.category-all-page {
  .category-all-title { text-align: center; }

  .category-all { margin-top: 20px; }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .category-list-item { margin: 5px 10px; }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }

  .category-list-child { padding-left: 10px; }
}

.post-block.category {
  padding: 10px 0 30px
}
.post-widgets {
  border-top: 1px solid #eee;
  padding-top: 9px;
  margin-top: 45px
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;

  .post-meta-divider {
    height: 25px;
    color: $grey-dark;
  }
}

.wp_rating {
  height: 20px;
  margin-right: 10px;
  text-align: center;
  line-height: 20px;
  padding-top: 6px;
}

.social-like {
  font-size: 14px;
  text-align: center;
  display: flex;
  justify-content: center;
}

.vk_like {
  width: 85px;
  height: 21px;
  padding-top: 7px;
  align-self: center;
}

.fb_like {
  height: 30px;
  align-self: center;
}

.bdsharebuttonbox {
  margin-top: 10px;
  display: flex;
  justify-content: center;
  a { border: none; }
}

.bdshare-slide-button-box a { border: none; }
